<table class="table">
    @foreach (var product in Model.Products)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Category</td>
            <td>
                <a class="btn"
                   asp-page="./Details"
                   asp-route-productId="@product.Id">
                    <i class="fas fa-search-plus"></i>
                </a>
                <a class="btn"
                   asp-page="./Edit"
                   asp-route-productId="@product.Id">
                    <i class="far fa-edit"></i>
                </a>
                <a class="btn"
                   asp-page="./Delete"
                   asp-route-productId="@product.Id">
                    <i class="far fa-trash-alt"></i>
                </a>
            </td>

        </tr>
    }
</table>