<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Juicer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container text-left">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Juicer</a>
                <a class="nav-link text-light" asp-area="" asp-page="/Recipes/List">Recipes</a>
                <a class="nav-link text-light" asp-area="" asp-page="/Products/List">Products</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-center text-sm-center text-muted">
        <div class="container">
            <p>@DateTime.Now.Year - Juicer App by <a href="http://codera.pl">&copy;codera Marcin Stańczyk</a> | <a href="https://www.philips.co.uk/c-m-ho/food-preparation/healthy-drinks-recipe-app">Recipes and photos by Philips</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a31000e77e.js" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
