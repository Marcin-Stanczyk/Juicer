@page "{recipeId:int?}"
@model Juicer.Pages.Recipes.EditModel
@{
    ViewData["Title"] = $"Edit {Model.RecipeDto.Name}";
}

@if (Model.RecipeDto.Id > 0)
{
    <h2>Editing @Model.RecipeDto.Name</h2>
}
else
{
    <h2>New Recipe</h2>
}


<div class="container">
    <div class="row">
        <div class="col-md-6">

            <form method="post" id="newRecipe">
                <input type="hidden" asp-for="RecipeDto.Id" />

                <div class="form-group">
                    <label asp-for="RecipeDto.Name"></label>
                    <input asp-for="RecipeDto.Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="RecipeDto.Name"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RecipeDto.Description"></label>
                    <input asp-for="RecipeDto.Description" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Instructions</label>
                    <input id="RecipeDto_Instructions" class="form-control" />
                    <button id="addInstruction" class="btn btn-primary">+</button>
                </div>

                <div class="form-group">
                    <label>Ingredients</label>
                    <div class="row">
                        <div class="col-md-3">
                            <label>Product</label>
                            <select id="products" class="form-control" asp-items="Model.Products">
                                <option value="" disabled selected></option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label>Amount</label>
                            <input type="number" id="amount" value="" class="form-control inlined" />
                        </div>
                        <div class="col-md-3">
                            <label>Unit</label>
                            <select id="units" class="form-control inlined" asp-items="Model.Units">
                                <option value="" disabled selected></option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button id="addIngredient" class="btn btn-primary">+</button>
                        </div>
                    </div>
                </div>

                <button type="submit" id="submitBtn" class="btn btn-primary">Save</button>
                <a asp-page="./List" class="btn btn-secondary">Cancel</a>
            </form>

        </div>
        <div class="col-md-6">
            <h3 id="nameView"></h3>
            <p id="descriptionView"></p>
            <ol id="instructionsView"></ol>
            <div class="table-responsive">
                <table class="table">
                    <tbody id="ingredientsView">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/editRecipe.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

