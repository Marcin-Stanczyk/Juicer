@page "{recipeId:int?}"
@model Juicer.Pages.Recipes.EditModel
@{
    ViewData["Title"] = $"Edit {Model.Recipe.Name}";
}

@if (Model.Recipe.Id > 0)
{
    <h2>Editing @Model.Recipe.Name</h2>
}
else
{
    <h2>New Recipe</h2>
}


<div class="container">
    <div class="row">
        <div class="col-md-6">

            <form method="post" id="newRecipe">
                <input type="hidden" asp-for="Recipe.Id" />

                <div class="form-group">
                    <label asp-for="Recipe.Name"></label>
                    <input asp-for="Recipe.Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="Recipe.Name"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Recipe.Description"></label>
                    <input asp-for="Recipe.Description" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Recipe.Instructions"></label>
                    <textarea wrap="hard" rows="5" asp-for="Recipe.Instructions" class="form-control"></textarea>
                </div>

                <div class="form-inline" id="Ingredients">
                    <table>
                        <tr>
                            <td>
                                <label asp-for="Recipe.Ingredients[0].Product"></label>
                                <select asp-for="Recipe.Ingredients[0].Product" asp-items="Model.Products" class="form-control"></select>
                            </td>
                            <td>
                                <label asp-for="Recipe.Ingredients[0].Amount"></label>
                                <input asp-for="Recipe.Ingredients[0].Amount" class="form-control" />
                            </td>
                            <td>
                                <label asp-for="Recipe.Ingredients[0].Unit"></label>
                                <select asp-for="Recipe.Ingredients[0].Unit" asp-items="Model.Units" class="form-control"></select>
                            </td>
                            <td>
                                <button id="addIngredient" class="btn btn-primary">+</button>
                            </td>
                        </tr>
                    </table>
                </div>


                <button type="submit" id="submitBtn" class="btn btn-primary">Save</button>
                <a asp-page="./List" class="btn btn-secondary">Cancel</a>
            </form>

        </div>
        <div class="col-md-6">
            <h3 id="nameView"></h3>
            <p id="descriptionView"></p>
            <ol id="instructionsView"></ol>
            <ul id="ingredientsView"></ul>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/editRecipe.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

